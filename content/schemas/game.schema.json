{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Game Schema",
  "type": "object",
  "required": ["title", "slug", "pitch", "status", "platforms", "coverImage", "screenshots", "description"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "The game's title"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly identifier"
    },
    "tagline": {
      "type": "string",
      "description": "Short subtitle or tagline"
    },
    "pitch": {
      "type": "string",
      "minLength": 10,
      "description": "Brief description/elevator pitch"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "description": "Detailed description"
    },
    "longDescription": {
      "type": "string",
      "description": "Extended description (markdown supported)"
    },
    "status": {
      "type": "string",
      "enum": ["released", "early-access", "in-development", "coming-soon", "cancelled"],
      "description": "Development status"
    },
    "releaseDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Release date in YYYY-MM-DD format"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Windows", "macOS", "Linux", "Android", "iOS", "Web", "PlayStation", "Xbox", "Nintendo Switch"]
      },
      "minItems": 1,
      "description": "Supported platforms"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Game genre/category tags"
    },
    "engine": {
      "type": "string",
      "description": "Game engine used"
    },
    "coverImage": {
      "type": "string",
      "description": "Path to cover/hero image"
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": {
            "type": "string",
            "description": "Screenshot URL"
          },
          "alt": {
            "type": "string",
            "description": "Alt text for accessibility"
          },
          "caption": {
            "type": "string",
            "description": "Optional caption"
          }
        }
      },
      "minItems": 3,
      "description": "Game screenshots for gallery"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key game features"
    },
    "systemRequirements": {
      "type": "object",
      "properties": {
        "minimum": {
          "type": "object",
          "properties": {
            "os": { "type": "string" },
            "processor": { "type": "string" },
            "memory": { "type": "string" },
            "graphics": { "type": "string" },
            "storage": { "type": "string" }
          }
        },
        "recommended": {
          "type": "object",
          "properties": {
            "os": { "type": "string" },
            "processor": { "type": "string" },
            "memory": { "type": "string" },
            "graphics": { "type": "string" },
            "storage": { "type": "string" }
          }
        }
      }
    },
    "links": {
      "type": "object",
      "properties": {
        "itchio": { "type": "string" },
        "steam": { "type": "string" },
        "trailer": { "type": "string" },
        "website": { "type": "string" },
        "github": { "type": "string" }
      }
    },
    "credits": {
      "type": "object",
      "properties": {
        "gameDesign": {
          "type": "array",
          "items": { "type": "string" }
        },
        "programming": {
          "type": "array",
          "items": { "type": "string" }
        },
        "art": {
          "type": "array",
          "items": { "type": "string" }
        },
        "audio": {
          "type": "array",
          "items": { "type": "string" }
        },
        "qa": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "featured": {
      "type": "boolean",
      "description": "Whether to feature this game prominently"
    }
  }
}
